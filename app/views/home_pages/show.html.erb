<section class="home-page">
  <header class="home-page__header">
    <h1 class="home-page__title"><%= @home_page.title %></h1>
    <% if authenticated? %>
      <div class="home-page__actions">
        <%= link_to "Edit home page", edit_home_page_path, class: "button button--primary" %>
      </div>
    <% end %>
  </header>

  <% if @home_page.content&.body&.present? %>
    <div class="home-page__body">
      <%= @home_page.content %>
    </div>
  <% else %>
    <p class="home-page__empty-state">
      Add your first welcome message with the editor.
    </p>
  <% end %>
</section>
